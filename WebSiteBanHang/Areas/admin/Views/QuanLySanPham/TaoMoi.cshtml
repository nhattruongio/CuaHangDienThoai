<script>
    $("#btnThemMoi").click(function () {
        // kiểm tra số lượng không phải là số hoặc nhỏ hơn 0
        var SL = $(".SoLuong").val();
        if (isNaN(SL) == true || SL < 0 || SL == 0) {
            $("#TB_SoLuong").text("Số lượng không hợp lệ");
            return false;
        }
        var Ra = $(".Ram").val();
        if (isNaN(Ra) == true || Ra < 0 || Ra == 0) {
            $("#TB_Ram").text("Số không hợp lệ");
            return false;
        }
        var Ro = $(".Rom").val();
        if (isNaN(Ro) == true || Ro < 0 || Ro == 0) {
            $("#TB_Rom").text("Số không hợp lệ");
            return false;
        }
    });
</script>


