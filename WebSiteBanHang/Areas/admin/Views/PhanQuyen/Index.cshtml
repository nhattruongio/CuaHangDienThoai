@using WebSiteBanHang.Models;
@model IEnumerable<LoaiThanhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/LayoutAdmin.cshtml";

}

<h2>Danh sách thành viên</h2>

<div class="container-fluid" style="padding-top:50px">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh sách loại thành viên
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>

                                <tr>
                                    <th>
                                        Mã loại thành viên
                                    </th>
                                    <th>
                                        Tên Loại
                                    </th>                                
                                    <th>
                                        Ưu đãi
                                    </th>     
                                    <th>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaLoaiTV)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenLoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UuDai)
                                    </td>

                                    <td class="text-right">
                                        @Html.ActionLink(" ", "PhanQuyen", new { @id = item.MaLoaiTV }, new { @class = "fa fa-eye btn btn-primary btn-sm", @title = "Phân Quyền" })
                                        @*
            @Html.ActionLink(" ", "Xoa", new { @makh = item.MaKH }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @title = "Xoá khách hàng" })

                                        *@
                                    </td>

                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

