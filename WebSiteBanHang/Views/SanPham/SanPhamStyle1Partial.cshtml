@using WebSiteBanHang.Models
@model IEnumerable<SanPham>

@foreach (var item in Model.Take(9))
{
    <div class="col-md-4 grid-top" style="padding-top:20px">
        <a href="@Url.RouteUrl("XemChiTiet",new { @id=item.MaSP,@tensp=item.TenSP})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src=@Url.Content("~/Content/HinhAnhSP/" + item.HinhAnh) alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-left    b-delay03 ">
                    <span>@Html.Raw(item.CauHinh)</span>
                    <span>@Html.Raw(item.NhaCungCap)</span>
                </h3>
            </div>
        </a>
        <a href="@Url.RouteUrl("XemChiTiet",new { @id=item.MaSP,@tensp=item.TenSP})" class="item_add"><p class="number item_price"><i> </i>@item.DonGia.Value.ToString("#,##") VNĐ</p></a>

        <p><a href="@Url.RouteUrl("XemChiTiet",new { @id=item.MaSP,@tensp=item.TenSP})">@item.TenSP</a></p>
    </div>
}
<div class="clearfix"> </div>
