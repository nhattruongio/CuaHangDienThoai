@using WebSiteBanHang.Models;
@model PhieuNhap
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2>Demo Phiếu Nhập</h2>

@using (Html.BeginForm())
{
    <label>Mã phiếu nhập</label><input name="MaPN"/>
    <label>Mã nhà cung cấp</label><input name="MaNCC" />
    for (int i = 0; i < 10; i++)
    {
        <h2>Thông tin sản phẩm</h2>
        <label>Mã sản phẩm:</label>
        <input name="@Url.Content("[" +i+ "].MaSP")" value="@i"/>
        <label>Đơn giá nhập :</label>
        <input name="@Url.Content("[" +i+ "].DonGiaNhap")" value="10000" />
        <label>Số lượng nhập :</label>
        <input name="@Url.Content("[" +i+ "].SoLuongNhap")" value="100" />
    }
    <br />
    <br />
    <input type="submit" value="Đồng ý"/>
}